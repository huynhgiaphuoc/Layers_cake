@model WebApplication2.Models.Cart
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    <link rel="stylesheet" href="~/Content/Css/Product.css" />
}
<div class="Order_total">
    <div class="paymentcenter">
        <div class="order_fill">
            <p style=" font-family: cursive; font-size: larger; font-weight: 700;">Please Input Information</p>
            <p style=" height: 5px; background-color: black;"></p>
            @using (Html.BeginForm("Payment", "ShoppingCart"))
            {
                <table class="table" style="margin-top: 50px;border : 0px !important">
                    <tr>
                        <th>Name: </th>
                        <th> <input class="form-control" placeholder="Name" id="Name" name="Cus_Name" onchange="myFunction()" /></th>


                    </tr>
                    <tr>
                        <th>Phone: </th>
                        <th> <input class="form-control" placeholder="Phone" id="Phone" name="Phone" onchange="myFunction()" /></th>


                    </tr>
                    <tr>
                        <th>Address: </th>
                        <th> <input class="form-control" placeholder="Address" id="Address" name="Address" onchange="myFunction()" /></th>


                    </tr>




                    <input class="btn btn-dark" type="submit" name="submit" />
                </table>







            }

            <p>@Model.Total_money()</p>


        </div>

    </div>


</div>
