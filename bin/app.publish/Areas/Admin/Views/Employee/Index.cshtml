@model List<WebApplication2.Models.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";

    <style>
        .thanhnut {
            display: flex;
            margin-top: 5px;
        }

        table.table thead tr th {
            background-color: #fbd5d5;
        }
    </style>
}
<div>
    <div id="displayep">
        <div class="thanhnut">
            <form class="d-flex flex-row align-items-center flex-wrap" action="/admin/Customer/index">
                <label for="search" class="mx-2 my-1">Search</label>
                <input type="search"
                       class="from-control w-auto"
                       id="search"
                       name="search"
                       value="@ViewBag.Search"
                       placeholder="search" />
                <button type="submit" class="btn btn-primary mx-2">GO</button>

            </form>

            <a id="addep" class="btn btn-primary" style="margin-left: 10px">Add</a>
        </div>
        <div style="margin-top: 30px">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Details</th>
                        <th>Total_quantity</th>
                        <th>Saled</th>
                        <th>ID_category</th>
                        <th>Edit</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (var item in Model)
                    {


                        <tr style="height:100px">
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.Birthday</td>
                            <td>
                                @item.Gender
                            </td>
                            <td>
                                @item.Phone
                            </td>
                            <td>@item.Gmail</td>
                            <td>@item.Username</td>

                            <td>
                                <a class="btn btn-secondary" href="/Admin/Employee/EditEmployee/@item.ID_employee">Edit</a>
                            </td>
                            <td>
                                <a class="btn btn-secondary" href="/Admin/Employee/Delete/@item.ID_employee">Delete</a>
                            </td>
                        </tr>


                    }


                </tbody>

            </table>
        </div>
    </div>
</div>


<script>
    const dark = document.body;
    const change = document.querySelector('#switch-mode');
    change.addEventListener('click', () => {
        change.classList.toggle('bi-moon-stars-fill');
        change.classList.toggle('bi-brightness-high-fill');
        let mode = dark.classList.toggle('dark');
        localStorage.setItem('darkmode', mode);
    });

    $("#addep").click(function () {
        $("#displayep").load("AddEmployee","Employee");
    });
</script>





